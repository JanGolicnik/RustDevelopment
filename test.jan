let opening_string = "Enter two numbers please      ";
let first_input_prompt = "First number: ";
let second_input_prompt = "Second number: ";

let new_line = 10;

let read_buf = 0;

print opening_string, 39;
print &new_line, 1;

while true{
    print first_input_prompt, 14;
    read &read_buf, 1;
    let x = read_buf;
    read &read_buf, 1;

    print second_input_prompt, 15;
    read &read_buf, 1;
    let y = read_buf;
    read &read_buf, 1;

    x = x - 48;
    y = y - 48;  

    if x < 4 {
        if y < 4 {
            let res = x + y + 48; 
            print &res, 1;
            print &new_line, 1;
            return x + y + 48;
        }
    }
}